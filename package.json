{
  "name": "l-language-server",
  "version": "1.5.0",
  "description": "L language server",
  "categories": [],
  "keywords": [
    "language-server",
    "tower-lsp-server"
  ],
  "license": "MIT",
  "repository": {
    "url": "https://github.com/IWANABETHATGUY/tower-lsp-boilerplate"
  },
  "main": "./dist/extension.js",
  "scripts": {
    "postinstall": "cd client && bun install",
    "compile": "bun run check-types && bun esbuild.js --production",
    "check-types": "bun --bun tsc --noEmit",
    "watch": "bun --run watch:all",
    "watch:all": "bun --parallel run watch:esbuild watch:tsc",
    "watch:esbuild": "bun esbuild.js --watch",
    "watch:tsc": "bun --bun tsc --noEmit --watch --project tsconfig.json",
    "package": "vsce package --no-dependencies",
    "lint": "oxlint -c oxlint.json .",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check ."
  },
  "devDependencies": {
    "@types/glob": "8.1.0",
    "@types/mocha": "10.0.10",
    "@types/node": "25.2.0",
    "@vscode/vsce": "^3.2.1",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.2",
    "glob": "13.0.0",
    "mocha": "11.0.2",
    "npm-run-all": "^4.1.5",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "ts-loader": "^9.5.1",
    "typescript": "5.9.3",
    "@vscode/test-electron": "^2.3.9",
    "vscode-uri": "^3.1.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "l",
        "extensions": [
          ".l"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "l-language-server",
      "properties": {
        "l-language-server.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:l"
  ],
  "engines": {
    "vscode": "^1.108.0"
  },
  "packageManager": "bun@1.1.12",
  "enabledApiProposals": []
}
