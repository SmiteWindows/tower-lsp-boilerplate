{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "L Language",
  "scopeName": "source.l",
  "patterns": [
    {"include": "#comments"},
    {"include": "#keywords"},
    {"include": "#strings"},
    {"include": "#numbers"},
    {"include": "#functions"},
    {"include": "#variables"}
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.l",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.l",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.l",
          "match": "\\b(if|else|while|for|return|break|continue|function|var|let|const)\\b"
        },
        {
          "name": "storage.type.l",
          "match": "\\b(int|float|string|bool|array|object)\\b"
        },
        {
          "name": "constant.language.l",
          "match": "\\b(true|false|null|undefined)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.l",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.l",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.l",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.l",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.l",
          "match": "\\b([0-9]+\\.[0-9]+|[0-9]+)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.l",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.l",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}